@page
@model SparkAutoPractice.Pages.ServiceTypes.IndexModel
@{
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">

        @* Page Header/Title *@
        <div class="col-6">
            <h2 class="text-info">Service Type List</h2>
        </div>

        @* Create New Service Button *@
        <div class="col-6 text-right">
            <a asp-page="Create" class="btn btn-info">
                <i class="fas fa-plus"></i>&nbsp;
                Create New Service
            </a>
        </div>
    </div>

    <br />

    @* Services Table *@
    <div>
    @if (Model.ServiceType.Count == 0)
    {
        <p>No service types exist. Please create a new service type.</p>
    }
    else
    {
        @* Table Head *@
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(x => x.ServiceType[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.ServiceType[0].Price)
                </th>
                <th></th>
            </tr>

            @* Table Rows *@
            @foreach (var item in Model.ServiceType)
            {
                <tr>
                    @* Service Type Data *@
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Price)
                    </td>

                    @* Buttons (Edit, Details, Delete) *@
                    <td style="width: 150px;">
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary text-white" asp-page="Edit" asp-route-Id="@item.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-success text-white" asp-page="Details" asp-route-Id="@item.Id">
                                <i class="fas fa-list-alt"></i>
                            </a>
                            <a class="btn btn-danger text-white" asp-page="Delete" asp-route-Id="@item.Id">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
    </div>
</div>