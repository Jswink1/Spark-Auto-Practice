@page
@model SparkAutoPractice.Pages.ServiceTypes.DetailsModel
@{
}

@* Page Header/Title *@
<br />
<h2 class="text-info">Service Details</h2>
<br />

<form>
    <div class="border backgroundWhite">
        <input type="hidden" asp-for="ServiceType.Id" />

        @* Service Name Disabled Input *@
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Name" class="form-control" disabled="disabled" />
            </div>
        </div>

        @* Service Price Disabled Input *@
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Price" class="form-control" disabled="disabled" />
            </div>
        </div>

        @* Redirect to Edit Page or Back to List Buttons *@
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <a asp-page="Edit" class="btn btn-info form-control" asp-route-Id="@Model.ServiceType.Id">Edit</a>
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>