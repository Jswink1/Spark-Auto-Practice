@page
@model SparkAutoPractice.Pages.ServiceTypes.CreateModel
@{
}

@* Page Header/Title *@
<br />
<h2 class="text-info">Create Service Type</h2>
<br />

<form method="post">
    <div class="border backgroundWhite">

        @* Create Service Name Input *@
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Name" class="form-control" />
            </div>
            <span asp-validation-for="ServiceType.Name" class="text-danger"></span>
        </div>

        @* Create Service Price Input *@
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Price" class="form-control" />
            </div>
            <span asp-validation-for="ServiceType.Price" class="text-danger"></span>
        </div>

        @* Create Service Submit Buttons *@
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <partial name="_CreateAndBackToListButton" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}