@page
@model SparkAutoPractice.Pages.Services.HistoryModel
@{
}

<div class="container pt-4 pb-2 row">

    @* Page Header/Title *@
    <div class="col-6">
        <h2 class="text-info py-2">Service History</h2>
    </div>

    @* Back To Customer Car List *@
    <div class="col-3 offset-3 text-right py-2">
        <a asp-page="../Cars/Index" asp-route-userId="@Model.UserId" class="btn btn-outline-success form-control">
            Back To List
        </a>
    </div>
</div>

@if (Model.ServiceHeaders.Count == 0)
{
    <div class="backgroundWhite">
        <p>No Service Found...</p>
    </div>
}
else
{
    // Customer and Car Details
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row container">

                @* Customer Icon *@
                <div class="col-1 text-center pt-3 text-white-50">
                    <i class="far fa-user fa-2x"></i>
                </div>
                @* Customer Details *@
                <div class="col-5">
                    <label class="text-info">@Model.ServiceHeaders[0].Car.ApplicationUser.Name</label>
                    <br />
                    <label class="text-info">@Model.ServiceHeaders[0].Car.ApplicationUser.Email / @Model.ServiceHeaders[0].Car.ApplicationUser.PhoneNumber</label>
                </div>

                @* Car Details *@
                <div class="col-5 text-right">
                    <label class="text-info">@Model.ServiceHeaders[0].Car.Make @Model.ServiceHeaders[0].Car.Model @Model.ServiceHeaders[0].Car.Style </label>
                    <br />
                    <label class="text-info">@Model.ServiceHeaders[0].Car.Year </label>
                </div>
                @* Car Icon *@
                <div class="col-1 text-center pt-3 text-white-50">
                    <i class="fas fa-car fa-2x"></i>
                </div>

            </div>

            @* Service History List *@
            <div class="card-body">
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(x => Model.ServiceHeaders[0].Miles)
                        </th>
                        <th>
                            @Html.DisplayNameFor(x => Model.ServiceHeaders[0].TotalPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(x => Model.ServiceHeaders[0].Details)
                        </th>
                        <th>
                            @Html.DisplayNameFor(x => Model.ServiceHeaders[0].DateAdded)
                        </th>
                        <th>

                        </th>
                    </tr>

                    @* Service History Table Data *@
                    @foreach (var item in Model.ServiceHeaders)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(x => item.Miles)
                            </td>
                            <td>
                                @Html.DisplayFor(x => item.TotalPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(x => item.Details)
                            </td>
                            <td>
                                @Html.DisplayFor(x => item.DateAdded)
                            </td>
                            <td>
                                @* Service Details Button *@
                                <a asp-page="Details" class="btn btn-info form-control" asp-route-serviceId="@item.Id">
                                    <i class="fas fa-list-alt"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
}