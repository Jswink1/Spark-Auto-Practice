@page
@model SparkAutoPractice.Pages.Cars.EditModel
@{
}

@* Page Header *@
<br />
<h2 class="text-info">Edit Car</h2>
<br />

<form method="post">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Car.Id" />
        <input type="hidden" asp-for="Car.UserId" />

        @* Edit Car VIN Input *@
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.VIN" class="text-info"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.VIN" class="form-control" />
            </div>
            <span asp-validation-for="Car.VIN" class="text-danger"></span>
        </div>

        @* Edit Car Make Input *@
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Make" class="text-info"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Make" class="form-control" />
            </div>
            <span asp-validation-for="Car.Make" class="text-danger"></span>
        </div>

        @* Edit Car Model Input *@
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Model" class="text-info"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Model" class="form-control" />
            </div>
            <span asp-validation-for="Car.Model" class="text-danger"></span>
        </div>

        @* Edit Car Style Input *@
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Style" class="text-info"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Style" class="form-control" />
            </div>
            <span asp-validation-for="Car.Style" class="text-danger"></span>
        </div>

        @* Edit Car Year Input *@
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Year" class="text-info"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Year" class="form-control" />
            </div>
            <span asp-validation-for="Car.Year" class="text-danger"></span>
        </div>

        @* Edit Car Color Input *@
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Color" class="text-info"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Color" class="form-control" />
            </div>
            <span asp-validation-for="Car.Color" class="text-danger"></span>
        </div>

        @* Edit Car Submit Buttons *@
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <partial name="_EditAndBackToListButton" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}